<!-- MESSAGE ROW -->
<div class="row">
    <!-- IF USER IS AUTHOR OF THE MSG -->
    <% if (user && msg.author._id.equals(user._id)) { %>

        <div class="d-flex justify-content-end">
            <div class="col-8 ps-2">
                <div class="me-2 text-end" style="border-radius: 5px; border: 1px solid grey">
                    <div>
                        <%= msg.text %>
                    </div>                                    
                </div>

                <div class="d-flex justify-content-start me-2 mb-2">
                    <div class="small px-4" style="background-color: grey; border-radius: 5%;">
                        hidden time
                    </div>
                </div>   
            </div>
        </div>

    <!-- IF USER IS NOT HE AUTHOR OF THE MSG -->
    <% } else { %> 
        <div class="col-2">
            <% if (msg.author._id !== prevAuthorId) { %>
                <div class="px-2 me-2" style="background-color: grey; border-radius:20%; border:2px solid red;">
                    hidden author :
                </div>
            <% } %>
        </div>

        <div class="col-8 pe-2">
            <div class="me-2" style="border-radius: 5px; border: 1px solid grey">
                <div class="d-flex justify-content-between">
                    <div> <%= msg.text %> </div>
                </div>                                    
            </div>
            <div class="d-flex justify-content-end me-2 mb-2">
                <div class="small px-4" style="background-color: grey; border-radius: 5%;">
                    hidden time
                </div>
            </div>   
        </div>
    <%}%>
</div>




