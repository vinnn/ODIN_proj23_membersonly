    <!-- <h1><%= title %></h1> -->
    <!-- <h1> CLUB </h1> -->


    <div class="container mt-4">



            <div class="card mx-auto">

                <!-- CARD-HEADER -->
                <div class="card-header">
                    <h1> <% if (currentUser) { %>
                        currentUser.firstName + " " + currentUser.lastName 
                    <% } else { %>
                        <a href="/login" class="nav-link"></a>
                    <% } %>
                    </h1>
                </div>

                <!-- CARD-BODY - scrollable: overflow -->
                <div class="card-body p-4" style="height: 500px; overflow: auto;">

                    <% let prevUserId = "" %>
                    <% let prevMsgDate = "" %>

                    <% messages.forEach( msg => { %>

                        <!-- DISPLAY ROW WITH NEW DATE - IF USER IS MEMBER-->
                        <% if (currentUser && currentUser.member) { %>
                            <% if (msg.date !== prevMsgDate ) { %> 
                                <div class="row small d-flex justify-content-center">
                                    <%= msg.date %>
                                </div>
                            <%}%>
                        <%}%>    

                        <!-- DISPLAY MESSAGE ROW -->
                        <div class="row">


                            <!-- IF LOGGED IN & MESSAGE FROM USER -->
                            <% if (currentUser && msg.author._id.equals(currentUser._id)) { %>

                                    <div class="d-flex justify-content-end">
                                        <div class="col-8 ps-2">
                                            <div class="me-2 text-end" style="border-radius: 5px; border: 1px solid grey">
                                                <div>
                                                    <%= msg.text %>
                                                </div>                                    
                                            </div>

                                            <div class="d-flex justify-content-start me-2 mb-2">
                                                <div class="small">
                                                    <%= msg.time_formatted %>
                                                </div>
                                            </div>   

                                        </div>
                                    </div>


                                <% } else { %> 
                                <!-- IF MESSAGE FROM SOMEONE ELSE -->

                                    <div class="col-2">
                                        <% if (msg.author._id !== prevUserId) { %>
                                            <div class="px-2 me-2" style="border-radius:20%; border:2px solid red;">
                                                <%= currentUser? msg.author.firstName + " " + msg.author.lastName : "hidden author" %> :
                                            </div>
                                        <% } %>
                                    </div>

                                    <div class="col-8 pe-2">
                                        <div class="me-2" style="border-radius: 5px; border: 1px solid grey">
                                            <div>
                                                <%= msg.text %>
                                            </div>                                    
                                        </div>
                                        <div class="d-flex justify-content-end me-2 mb-2">
                                            <div class="small">
                                                <%= currentUser? msg.time_formatted : "hidden time"%>
                                            </div>
                                        </div>   
                                    </div>







                                <%}%>
                 

                            
                            
                            
                            
                            

                        </div>

                        <% prevUserId = msg.author._id %>
                        <% prevMsgDate = msg.date %>
                    <% }) %>

                </div>

                <!-- CARD-BODY - scrollable: overflow -->
                <div class="card-footer">

                        <form method="POST" action="/new-message">
                            <div class="input-group">
                                <input class="form-control" id="msg-text" type="text" name="text" placeholder="Write a message..."/>        
                                <button class="btn btn-primary" type="submit">Send</button> 
                            </div>
      
                        </form>




                </div>



            </div>















    </div>













